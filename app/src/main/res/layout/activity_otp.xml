<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/_20sdp"
    android:paddingEnd="@dimen/_20sdp"
    tools:context=".OtpActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="vertical"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back_arrow"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/back_arrow"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:focusable="true"
            />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/otp_verfication_code_title"
                android:textColor="@color/black"
                android:textSize="@dimen/_30sdp"
                android:textStyle="bold"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sub_otp_verfication_code_title"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/_50sdp"

                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtShowMobileNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgEdtMobileNo"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/pen_edit"
                    android:layout_marginStart="@dimen/_6sdp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/otp1"
                    android:layout_width="@dimen/_43sdp"
                    android:layout_height="@dimen/_43sdp"
                    android:textSize="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:gravity="center"
                    android:background="@drawable/otp_background"
                    android:inputType="number"
                    android:imeOptions="actionPrevious"
                    android:maxLength="1"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:nextFocusDown="@id/otp1"
                    android:nextFocusForward="@id/otp2"
                    android:nextFocusRight="@id/otp2"
                    android:nextFocusLeft="@id/otp1"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/otp2"
                    android:layout_width="@dimen/_43sdp"
                    android:layout_height="@dimen/_43sdp"
                    android:textSize="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:gravity="center"
                    android:background="@drawable/otp_background"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:imeOptions="actionPrevious"
                    android:textStyle="bold"
                    android:maxLength="1"
                    android:nextFocusDown="@id/otp1"
                    android:nextFocusForward="@id/otp3"
                    android:nextFocusRight="@id/otp3"
                    android:nextFocusLeft="@id/otp1"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/otp3"
                    android:layout_width="@dimen/_43sdp"
                    android:layout_height="@dimen/_43sdp"
                    android:textSize="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:gravity="center"
                    android:background="@drawable/otp_background"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:imeOptions="actionPrevious"
                    android:textStyle="bold"
                    android:maxLength="1"
                    android:nextFocusDown="@id/otp2"
                    android:nextFocusForward="@id/otp4"
                    android:nextFocusRight="@id/otp4"
                    android:nextFocusLeft="@id/otp2"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/otp4"
                    android:layout_width="@dimen/_43sdp"
                    android:layout_height="@dimen/_43sdp"
                    android:textSize="@dimen/_20sdp"
                    android:gravity="center"
                    android:background="@drawable/otp_background"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:imeOptions="actionPrevious"
                    android:textStyle="bold"
                    android:maxLength="1"
                    android:focusable="true"
                    android:nextFocusLeft="@id/otp3"
                    android:nextFocusDown="@id/otp3"
                    android:focusableInTouchMode="true"
                    />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/otp_submit"
                android:textColor="@color/white"
                android:background="@drawable/splash_btn_shape"
                android:textAllCaps="false"
                android:padding="@dimen/_15sdp"
                android:textSize="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_25sdp"
                />
            <ProgressBar
                android:id="@+id/pbr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressTint="@color/blue"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_25sdp"
                android:indeterminate="true"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="@color/pink"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtViewReceiveOtp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/otp_dont_receive_otp"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                android:textColor="#020202"
                android:layout_marginTop="@dimen/_35sdp"
                android:textAlignment="center"

                />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>